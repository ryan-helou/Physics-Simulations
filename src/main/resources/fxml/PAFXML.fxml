<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="755.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.vanier.template.controllers.PAFXMLController">
   <children>
      <HBox prefHeight="37.0" prefWidth="600.0" spacing="160.0">
